@model WebMVC.ViewModels.PurchaseRequest.Detail.DetailPurchaseRequestViewModel;
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>查看</h2>

    <div class="form-horizontal">
        <h4>請購單</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            請購單號
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Id)
            </div>
        </div>
        <div class="form-group">
            建立時間
            <div class="col-md-10">
                @Html.DisplayFor(model => model.CreateAt)
            </div>
        </div>
        <div class="form-group">
            描述
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>料號</th>
                    <th>名稱</th>
                    <th>規格</th>
                    <th>數量</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PurchaseRequestItems)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => item.PNId)</td>
                        <td>@Html.DisplayFor(model => item.Name)</td>
                        <td>@Html.DisplayFor(model => item.Spec)</td>
                        <td>@Html.DisplayFor(model => item.Qty)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

<div>
    @Html.ActionLink("返回清單", "Index")
</div>