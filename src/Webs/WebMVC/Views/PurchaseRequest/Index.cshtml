@{
    ViewData["Title"] = "物料管理";
}
@model WebMVC.ViewModels.PaginatedList<WebMVC.ViewModels.PurchaseRequest.List.PurchaseRequestViewModel>
<div class="text-center">
    <h1 class="display-4">物料管理</h1>
    <a asp-action="Create" >新增</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">請購單號</th>
                <th scope="col">敘述</th>
                <th scope="col">建立時間</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr scope="row">
                    <td>
                        <a asp-action="Details" asp-route-Id="@item.Id">詳細內容</a>
                        <a asp-action="Edit" asp-route-Id="@item.Id">編輯</a>
                        <a asp-action="Delete" asp-route-Id="@item.Id">刪除</a>
                    </td>
                    <th>@item.Id</th>
                    <td>@item.Description</td>
                    <td>@item.CreateAt</td>
                </tr>
            }
        </tbody>
    </table>
</div>